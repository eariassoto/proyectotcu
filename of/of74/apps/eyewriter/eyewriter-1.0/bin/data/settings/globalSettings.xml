<app>
	
	<!-- input mode and settings -->
	<input>
	
		<!-- mode, input 0 = live, 1 = video  -->
		<mode>0</mode>
		
		<!-- if mode is video, choose file -->
    	<videoFile>movies/eyeWriting.mov</videoFile>
    	
    	<!-- camera settings -->
    	<videoGrabber>
    	
			<!-- add a device id if you want -->
			<deviceId>  </deviceId>
			
			<!-- camera image dimensions -->
			<width>800</width>
			<height>600</height>
		</videoGrabber>
    </input>
    
    
    <!-- button settings -->
    <button>
    	<!-- sensitivity in seconds -->
    	<sensitivity> 0.8 </sensitivity>
    	
    	<!-- color scheme -->
    	<color>#34AF99</color>
    </button>
    
    
    <!-- OSC settings -->
    <osc>
    	<host>localhost</host>
    	<port>7401</port>
    </osc>

</app>
